<!DOCTYPE html>
<html>
  <head lang="ru">
    <meta charset="UTF-8">
    <title><%= t "title" %></title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>

  <body>
    <div class="header">
      <div class="container">
        <div class="header-logo">
          <h1 class="header-title">
            <%= link_to t("title"), root_path %>
          </h1>
        </div>

        <div class="header-nav">
          <% if current_user %>
              <%= link_to "@#{current_user.username}", user_path(current_user) %> |
              <%= link_to t("sessions.exit"), session_path, data: {method: :delete} %>
          <% else %>
              <%= link_to t("sessions.sign_up"), new_user_path,
                          class: 'button button-light button-small' %>
              <%= link_to t("sessions.sign_in"), new_session_path,
                          class: 'button button-light button-small' %>
          <% end %>
        </div>
      </div>
    </div>

    <div class="content">
      <div class="container">
        <% if flash.any? %>
            <div class="content-wrapper buffer-both">
              <% flash.each do |name, message| %>
                  <%= content_tag :div, message, class: "flash-#{name}" %>
              <% end %>
            </div>
        <% end %>

        <%= yield %>
      </div>
    </div>
  </body>
</html>
